{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "background": "transparent",
          "properties": {
            "style": "full"
          },
          "template": "<p:pathBright>\uea83  </><p:path>{{ .Path }}</> "
        },
        {
          "type": "git",
          "style": "plain",
          "background": "transparent",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "<p:divider>[</> <p:gitBright>{{ .UpstreamIcon }}</> <p:git>{{ .HEAD }} {{if .BranchStatus }}{{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}</> <p:divider>]</> "
        },
        {
          "type": "aws",
          "style": "plain",
          "background": "transparent",
          "template": "<p:awsBright>\uf0ef</>  <p:aws>{{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }}</> "
        },
        {
          "type": "python",
          "style": "plain",
          "background": "transparent",
          "template": "<p:pythonBright>\ued1b</> <p:python>{{ .Full }}</> "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0}}p:promptError{{ end }}",
            "{{ if eq .Code 0}}p:prompt{{ end }}"
          ],
          "background": "transparent",
          "template": "\ue602"
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground_templates": [
      "{{ if gt .Code 0}}p:promptError{{ end }}",
      "{{ if eq .Code 0}}p:prompt{{ end }}"
    ],
    "background": "transparent",
    "template": "\ue602 "
  },
  "secondary_prompt": {
    "background": "transparent",
    "template": "\ue602\ue602 "
  },
  "palette": {
    "path": "24",
    "pathBright": "33",
    "git": "136",
    "gitBright": "142",
    "aws": "208",
    "awsBright": "172",
    "python": "68",
    "pythonBright": "81",
    "prompt": "127",
    "promptError": "124",
    "divider": "154"
  }
}
{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "aws": "208",
    "awsBright": "172",
    "git": "142",
    "gitBright": "154",
    "path": "24",
    "pathBright": "33",
    "prompt": "127",
    "promptError": "124",
    "promptSecondary": "126",
    "python": "68",
    "pythonBright": "81"
  },
  "secondary_prompt": {
    "template": "\uf101 ",
    "foreground": "p:promptSecondary",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "\uf105 ",
    "background": "transparent",
    "foreground_templates": [
      "{{ if gt .Code 0}}p:promptError{{ end }}",
      "{{ if eq .Code 0}}p:prompt{{ end }}"
    ]
  },
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "options": {
            "style": "agnoster_short",
            "max_depth": 3
          },
          "style": "plain",
          "template": "<p:pathBright>\uea83  </><p:path>{{ .Path }}</> ",
          "background": "transparent",
          "type": "path"
        },
        {
          "options": {
            "branch_ahead_icon": "\udb82\udf7e ",
            "branch_behind_icon": "\udb82\udf7d ",
            "branch_gone_icon": "\udb80\udd64 ",
            "branch_icon": "\ue0a0",
            "branch_identical_icon": "\udb84\udecc ",
            "commit_icon": "\uf417 ",
            "tag_icon": "\uf412 ",
            "rebase_icon": "\ue728 ",
            "cherry_pick_icon": "\ue29B ",
            "revert_icon": "\uf0E2 ",
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf594 ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "<p:gitBright>{{ .UpstreamIcon }}</> <p:git>{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}</> ",
          "background": "transparent",
          "type": "git"
        },
        {
          "style": "plain",
          "template": "<p:awsBright>\uf0ef</>  <p:aws>{{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }}</> ",
          "background": "transparent",
          "type": "aws"
        },
        {
          "style": "plain",
          "template": "<p:pythonBright>\ued1b</> <p:python>{{ .Full }}</> ",
          "background": "transparent",
          "type": "python"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "\uf105",
          "background": "transparent",
          "type": "text",
          "foreground_templates": [
            "{{ if gt .Code 0}}p:promptError{{ end }}",
            "{{ if eq .Code 0}}p:prompt{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}